<div class="wrapper row1">
  <div id="header" class="clear">
  	
	<%= render 'share/title'%>
  	
    <%= render 'share/site_search' %>  
    
    <%= render 'share/navigate' %>  
    
  </div>
</div>

<div class="wrapper row3">
  <div id="container" class="clear">
    <div id="content">
      <div id="comments" style="height: 480px">

	 		<p><%= render(:partial => "share/menu_admin") %></p>            	
  	
			<p><%= link_to "&laquo; Back".html_safe, :back %></p>
				
			<div id="content">
			  
			  <h2><p><em>Contact List</em></p></h2>
			
				<div class="pagination">
					<%= will_paginate %>
				</div>
					
				<div style="height: 20px"></div>	
					
			    <table id="admin_list" style="width: 1000px; height: 300px;" title="Contacts" >    	    	
				    <tr>
					    <th field="id" width = "40">ID</th>
					    <th field="created_at" width = "180">Date</th>			    		    	
					    <th field="name" width = "200">Name</th>
					    <th field="email" width = "200">Email</th>
					    <th field="subject" width = "200">Subject</th>
					    <th field="view">View</th>			    
					</tr>
					<% @admin_contacts.each do |contact| %>
				    <tr>
					    <td><%= contact.id %></td>
					    <td><%= contact.created_at %></td>		    	
					    <td><%= contact.name %></td>
					    <td><%= contact.email %></td>
					    <td><%= contact.subject %></td>
					    <td><%= link_to('View', {:action => 'view', :id => contact.id}) %></td>			    
					</tr>
					<% end %>	    	
			    </table>
					
				<div style="height: 10px"></div>	
						
				<div>
					<%= will_paginate %>
			  	</div>
			  	
			</div>
    
      </div>
    </div>
  </div>
</div>
