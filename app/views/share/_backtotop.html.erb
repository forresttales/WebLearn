
	<style>
	
		/* back to top button */
	
		.back-to-top {
			display: none;			
		}
		
		div.inflow {
		  	position: relative; 
		  	margin-right: 4.5em;		  
		}
		div.positioner {position: absolute; right: 0;} /*may not be needed: see below*/
		div.fixed {
		  	width: 40px;
		  	height: 60px; 
		  	text-align: center;
			padding-top: 22px;
			padding-left: 4px;		  	
		  	position: fixed; 
		  	top: 500px; 
		  	margin-left: 15px;
		  	z-index: 200;
		}
		div.fixed:hover {
			/*background-color: rgba(252, 207, 235, 0.50);		*/		
		}


		/* back to top home */

		.back-to-home {
			display: none;		
			color: rgba(170, 170, 170, 0.70);
		}
		
		div.inflow-home {
		  	position: relative;	  	
		  	
		  	margin-left: 0.4em;		  
		}
		div.positioner-home {position: absolute; left: 0;}
		div.fixed-home {
			color: rgba(200, 200, 200, 0.60);
			text-align: center;
			padding-top: 10px;
		  	width: 62px;
		  	height: 32px; 
		  	position: fixed; 
		  	top: 100px; 
		  	margin-left: 5px;
		  	z-index: 201;
		}
		div.fixed-home:hover {
			/*background-color: rgba(252, 207, 235, 0.50);		*/						
		}
	
	</style>


  	<div class="inflow">
    	<div class="positioner"><!-- might not be needed -->
      		<a href="#" class="back-to-top">
      			<div class="fixed">
      				<img src="/assets/back-to-top-gray.png" />
      			</div>
      		</a>
    	</div>
  	</div>

  	<div class="inflow-home">
    	<div class="positioner-home">
      		<div class="fixed-home">
      			<a href="/index" class="back-to-home">Home</a>
      		</div>
    	</div>
  	</div>


    <script>
                
		jQuery(document).ready(function() {
			var offset_top = 220;
			var offset_hom = 50;			
			var duration = 1000;
			jQuery(window).scroll(function() {
				if (jQuery(this).scrollTop() > offset_top) {
					jQuery('.back-to-top').fadeIn(duration);
				} else {
					jQuery('.back-to-top').fadeOut(duration);
				}
				if (jQuery(this).scrollTop() > offset_hom) {
					jQuery('.back-to-home').fadeIn(duration);					
				} else {
					jQuery('.back-to-home').fadeOut(duration);					
				}	
			});
			
			jQuery('.back-to-top').click(function(event) {
				event.preventDefault();
				jQuery('html, body').animate({scrollTop: 0}, duration);
				return false;
			})
		});
		
	</script>
