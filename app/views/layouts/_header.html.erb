	nav {
		font-family: msyh;

		background-color:#F1F2E1;
		box-shadow: 2px 2px 10px #000;

		position: relative;
		z-index: +10;

		/*margin-left: -3000px;
		padding-left: 3000px;
		margin-right: -3000px;
		padding-right: 3000px;*/		
				
		background: #56854E; 
		background: linear-gradient(top, #56854E 0%, #254520 100%);  
		background: -moz-linear-gradient(top, #56854E 0%, #254520 100%); 
		background: -webkit-linear-gradient(top, #56854E 0%,#254520 100%);
		 
		height: 38px;
		
	}

	nav a:hover {
	text-decoration: none;
	}

	nav ul {
		padding-left: 0px;
		margin-top: 0px;
		border-radius: 0px;  
		list-style: none;
		position: relative;
		display: inline-table;		
	}
		
	nav li {
		float: left;		
		display: inline;
	}
		
	nav ul:after {
		content: "";
		clear: both;
		display: block;
	}
	
	nav ul li:hover {
		background: #56854E; 
		background: linear-gradient(top, #56854E 0%, #254520 100%);  
		background: -moz-linear-gradient(top, #56854E 0%, #254520 100%); 
		background: -webkit-linear-gradient(top, #56854E 0%,#254520 100%); 
	}
	
	nav ul li:hover a {
		color: #BFFAB9;
	}
	
	nav ul li a {
		display: block;
		padding: 9px 9px;
		color: #fff;
		text-decoration: none;
		font-size: 20px;
	}

	nav ul ul {
		display: none;
	}

	nav a:active {
		background: #56854E; 
		background: linear-gradient(top, #56854E 0%, #254520 100%);  
		background: -moz-linear-gradient(top, #56854E 0%, #254520 100%); 
		background: -webkit-linear-gradient(top, #56854E 0%,#254520 100%); 
		color:#F0F56E;
		outline: none;
	}
		
		
	nav ul ul {
		background-color:rgba(86, 133, 78, 0.8);

		-moz-box-shadow:2px 2px 20px rgba(0,0,0,.8);
		-webkit-box-shadow:2px 20px 2px rgba(0,0,0,.8);
		box-shadow:2px 2px 20px rgba(0,0,0,.8);

		/*border-bottom-left-radius: 0px;
   		border-bottom-right-radius: 0px;		*/
   		   		
		border-bottom-left-radius: 10px;
   		border-bottom-right-radius: 10px;
		position: absolute;
	}

	nav ul ul li:first-child {
		float: none; 
		position: relative;
	}
			
	nav ul ul li {
		float: none; 
		position: relative;
	}
				
	nav ul ul li a {
		padding: 10px 20px;
		border-bottom-left-radius: 0px;
   		border-bottom-right-radius: 0px;
	}

	nav ul ul li:last-child a {
		padding: 10px 20px;
		border-bottom-left-radius: 10px;
   		border-bottom-right-radius: 10px;
	}

