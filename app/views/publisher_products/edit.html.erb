<% @title = "Publishers Edit" %>

	<style>
	
		.container {
			width: 1000px;
			margin-left: auto;
			margin-right: auto;
			min-height: 800px;
		}

    	.links {
    		font-family:Arial, Helvetica, sans-serif;
    		font-size: 16px;
    		color: brown;    		
    	}
		
		.input-signin {
			font-family: Arial, Helvetica, sans-serif;
			color: #000;			
			font-size: 16px;
			width: 300px;
			height: 24px;
			border-style:solid;
			border-radius: 4px;
			background-color: #fff;
			border-color: #000;
			border-width: 1px;
			padding-left: 6px;
		}
	
		.input-signin:focus {
			border-color: #3949C4;
			color: #000;
			-webkit-box-shadow: 0 0 10px #3949C4;
			-moz-box-shadow: 0 0 10px #3949C4;
			box-shadow: 0 0 10px #3949C4;
		}

		.input-signin:disabled {
			border-color: #523401;
			color: #523401;
			background-color:#CCCBC8;
		}
			
		.input-label-signin {
			font-family: Arial, Helvetica, sans-serif;
			color: #000;
			font-size: 16px;
			width: 220px;
			height: 18px;
		}

		.input-label-signin:disabled {
			font-family: Arial, Helvetica, sans-serif;
			color: #523401;
		}
			
		.input-signin-spacer {
			height: 16px;
		}
			
		div .cell-right-signin-admin {
			display: table-cell;
			width: 50%;
			text-align: left;
			align: top;		
		}
	
		div .cell-left-signin-admin {
			display: table-cell;
			width: 36%;	
			align: top;
			text-align: right;		
			padding-right: 20px;
		}
		
		div .cell-submit-signin-admin {
			display: table-cell;
			width: 50%;
			text-align: left;
			align: top;		
			padding-left: 0px;
		}
		
		.signin-btn {
		  
		  	display: inline-block;
		  	text-decoration: none; 
		  	width: 308px;
		  	height: 30px;
		  	background: linear-gradient(#000, #000);
		  	text-shadow: 1px 1px 1px #0E86B2; 
		  	border-radius: 6px;
		}
	
		.signin-btn:focus {
		  background: #CCC; 
		  color: #5F7A2A;
		  box-shadow: inset 0 1px 0 rgba(200,200,200,0.2);
		}
		
		.signin-btn:hover { 
		  box-shadow: inset 0 1px 1px rgba(255,255,255,0.2), 
		  inset 0 1.5em 1em rgba(255,255,255,0.3);
		}
		
		.signin-btn:active { 
		  box-shadow: inset 0 1px 1px rgba(255,255,255,0.2), 
		  inset 0 1.5em 1em rgba(0,0,0,0.3); 
		}
		
	</style>

	<header>
		<%= render 'share/backtotop' %>
	</header>

	<div class="container">
		<div style="display: table;">
			<div =style="display: table-row;">
				
				<div style="display: table-cell; width: 200px;" class="boxtemp-blue">
					<div style="height: 14px;"></div>
					 <%= link_to('Profile', {:action => 'show', :id => @publisher.id}, :class => 'links') %>
					<div style="height: 14px;"></div>
					<%= link_to 'Photos', image_publishers_index_path, :class => 'links' %>
				</div>
				
				<div style="display: table-cell; width: 600px;" class="boxtemp-green">
					<%= form_for(:publisher, :url => {:action => 'update', :id => @publisher.id}) do |f| %>
				
					<div class="row">
						<div class="cell-left-signin-admin">
							<%= f.label(:id, 'ID', class: 'input-signin-label') %>							
						</div>
						<div class="cell-right-signin-admin">
							<%= f.text_field :id, :class => "input-signin", :disabled => true %>	
						</div>      	
					</div>

					<div class="input-signin-spacer"></div>

					<div class="row">
						<div class="cell-left-signin-admin">
							<%= f.label(:created_at, 'created_at', class: 'input-signin-label') %>							
						</div>
						<div class="cell-right-signin-admin">
							<%= f.text_field :created_at, :class => "input-signin", :disabled => true %>	
						</div>      	
					</div>

					<div class="input-signin-spacer"></div>

					<div class="row">
						<div class="cell-left-signin-admin">
							<%= f.label(:updated_at, 'updated_at', class: 'input-signin-label') %>							
						</div>
						<div class="cell-right-signin-admin">
							<%= f.text_field :updated_at, :class => "input-signin", :disabled => true %>	
						</div>      	
					</div>

					<div class="input-signin-spacer"></div>

					<div class="row">
						<div class="cell-left-signin-admin">
							<%= f.label(:phone, 'phone', class: 'input-signin-label') %>							
						</div>
						<div class="cell-right-signin-admin">
							<%= f.text_field :phone, :class => "input-signin", :disabled => false %>	
						</div>      	
					</div>


					<div class="input-signin-spacer"></div>
					<div class="input-signin-spacer"></div>
					      		
					<div class="row">
						<div class="cell-left-signin-admin">
						</div>
						<div class="cell-right-signin-admin">
							<div style="height: 30px;"></div>
							<%= f.submit "Update", class: 'signin-btn' %>
						</div>      	
					</div>      		
										
					<% end %>
				</div>
			</div>
		</div>
	</div>
					
	<script>

		$(window).load( function() {
		//$(document).ready(function(){

		});
	
	</script>
