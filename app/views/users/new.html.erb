<% provide(:title, 'Create Account') %>

	<header>
		<div style="height: 200px;background-color: white;">
			<div style="height: 70px"></div>
			<h1 align="center">Create Login</h1>			
		</div>      		
	</header>

	<div class="table-yellow">
		<div style="padding-top: 80px"></div>
		
		<%= form_for(@user) do |f| %>
		
		<!-- = render 'shared/error_messages', object: f.object -->			
			<%= hidden_field_tag :account_type, @account_type  %>

		<div class="row">
			<div class="cell-left-signin">
				<%= f.label(:email, "Email") %>
			</div>
			<div class="cell-right-signin">
				<%= f.text_field(:email, :class => "input-form", :autofocus => true) %>
			</div>      	
		</div>      		
		
		<div class="row">
			<div class="cell-left-signin">
				<%= f.label(:username, "Username") %>
			</div>
			<div class="cell-right-signin">
				<%= f.text_field(:username, :class => "input-form") %>
			</div>      	
		</div>
		
		<div class="row">
			<div class="cell-left-signin">
				<%= f.label(:password, "Password") %>
			</div>
			<div class="cell-right-signin">
				<%= f.password_field(:password, :class => "input-form") %>
			</div>      	
		</div>      		

		<div class="row">
			<div class="cell-left-signin">
				<%= f.label(:password_confirmation, "Confirmation") %>
			</div>
			<div class="cell-right-signin">
				<%= f.password_field(:password_confirmation, :class => "input-form") %>
			</div>      	
		</div>      		

	</div>
	
	<div class="table-yellow">
		<div style="height: 30px;"></div>			
		<div class="row">
			<div class="cell-submit-signin">		
				<%= f.submit "Create Password" %>
			</div>
		</div>
		<div style="height: 140px;"></div>	
	</div>

		<% end %>
