 <%= provide(:title, 'Publisher Metadata') %>
 
 				
	<!-- <script type="text/javascript" src="/assets/entrepeneurs_jquery-1.js"></script> --> 		
	
	<!-- <script type="text/javascript" src="../scripts/jquery.tmpl.js"></script> -->
	
	
	
	
	<header>					
		<%= render 'share/backtotop' %>
	</header>		

	<div class="container">

		<!-- <div style="height: 20px; width: 20px; background-color: red" onclick="callImage();"></div> -->
		
		<div class="table-profile">
			<div class="row-profile">
				
				<div class="col-left">
					<%= render 'share/dir_publishers_left'%>
				</div>
				
				<div class="col-midd">
					<span class="normal pad-left-20">Publisher Product Metadata</span>
					<div class="line-space-20"></div>
					
					
					<% if @metadatatags_count == 0 %>
						<span class="pad-left-20"><%= link_to 'New Metadata', '/PublisherNewMetadata', :class => 'links' %></span>
					<% end %>

<!-- <div id="id_container"></div>
<script type="text/template" id="cardTemplate">
<div>
    <a href="{0}">{1}</a>
</div>
</script> -->


					<div class="line-space-20"></div>
		 			 
					<% if @publisher_product_metadatatags.any? %>
				
			
						<% for i in 0..(@publisher_product_metadatatags.count - 1) %>
				
						    	<table style="margin-right: 30px; margin-left: 30px;">
						    		<tr>
						    			<td>
						    				<span class="normal"><%= @publisher_product_metadatatags[i].name_metadata %></span>
						    			</td>
						    		</tr>
						    		<tr><td style="height: 20px;"></td></tr>
						    		<tr>
						    			<td>
						    				<span class="small"><%= @publisher_product_metadatatags[i].text_metadata %></span>
						    			</td>
						    		</tr>
						    	</table>
						    	<div style="height: 20px;"></div>
						    	<table>
						    		<tr>
										<td class="pad-left-20">
											<span class="normal">
												<%= button_to "Edit", {:action => 'edit', :id => @publisher_product_metadatatags[0].id } %>
											</span>											
										</td>
						    			<td>
									    	<span class="normal">
											   	<% delete_msg = "Delete Metadata ID: " + @publisher_product_metadatatags[i].id.to_s + " ?" %>
												<%= button_to "Delete", {:action => 'destroy', :id => @publisher_product_metadatatags[i].id}, :method => :delete, :confirm => delete_msg, :class => 'delete-btn' %>
											</span>
						    			</td>
						    		</tr>
						    	</table>

						<% end %>
									
					<% else %>
			
						<div>
							<span class="normal-red pad-left-20">No metadata for this product</span>
						</div>

					<% end %>
		 			 
				</div>
				
				<div class="col-right">
					<%= render 'share/dir_publishers_right' %>
				</div>				
			</div>
		</div>		
	</div>

	<script>
	  
		//$(document).ready(function() {
		$(window).load( function() {
	
			var cnt = gon.logos_count;

			var container = "";
			var ref = "";
			var imageTemplate;
			
			for( i = 0; i < cnt; i++) {
				container = "#imageTemplate_" + i;
				imageTemplate = $(container).html();
				ref = "#image_container";
			    $(ref).append(imageTemplate);
			}
		});
	  		  
	</script>		
		

