<h1>access_publishers login</h1>

<div class="wrapper row3">
  <div id="container" class="clear">
  	
  	<div>
		<%= link_to "Return", user_publishers_path %>
	</div>	
		
  	<br />
  	<br />
  	<br />
  	  	
    <div id="content">
      
      <h2>School Login</h2>
      
      <div id="respond">
      	
		  <%= form_tag(:action => 'attempt_login_publisher') do %>
		  <table>
		    <tr>
		      <td><%= label_tag(:username) %></td>
		      <td><%= text_field_tag(:username) %></td>
		    </tr>
		    <tr>
		      <td><%= label_tag(:password) %></td>
		      <td><%= password_field_tag(:password) %></td>
		    </tr>
		    <tr>
		      <td>&nbsp;</td>
		      <td><%= submit_tag("Log In") %></td>
		    </tr>
		  </table>
		  <% end %>
        
      </div>
      
    </div>
    
  </div>
</div>
