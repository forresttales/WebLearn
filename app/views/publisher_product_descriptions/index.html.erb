<% provide(:title, 'Publisher Products') %>


	<style>
		
		.form-display-col1 {
			width: 200px;
		}
		.form-display-col2 {
			width: 400px;
		}
		
	</style>

	<header>
		<%= render 'share/backtotop' %>
	</header>

	<div class="container">
		<div class="table-profile">
			<div class="row-profile">
				
				<div class="col-left">
					<%= render 'share/dir_publishers_left'%>
				</div>
				
				<div class="col-midd">

					<div style="text-align: left;">
						<span class="normal pad-left-20">Publisher Products</span>
					</div>

					<div class="line-space-20"></div>
					
					<div>
						<span class="normal pad-left-20">
							<em>
							<%= @publisher_product_name %>
							</em>
						</span>
					</div>
					
					<div>
						<span class="normal pad-left-20">
							Product_id: <%= @publisher_product_id %>
						</span>
					</div>

					<div class="line-space-20"></div>

			
					 <% if @publisher_product_descriptions.any? %>
					 
					 	<table>
					 		<tr>
					 			<td class="form-display-col1">
					 				<span class="small pad-left-20">Created:</span></div>
					 			</td>
					 			<td class="form-display-col2">
					 				<span class="small pad-left-20"><%= @publisher_product_descriptions[0].created_at.to_s(:long) %></span></div>
					 			</td>
					 		</tr>
					 		<tr><td style="height: 10px;"></td><td></td></tr>
					 		<tr>
					 			<td>
					 				<span class="small pad-left-20">Updated:</span></div>
					 			</td>
					 			<td>
					 				<span class="small pad-left-20"><%= @publisher_product_descriptions[0].updated_at.to_s(:long) %></span></div>
					 			</td>
					 		</tr>
					 		<tr><td style="height: 10px;"></td><td></td></tr>
					 		<tr>
					 			<td>
					 				<span class="small pad-left-20">Description:</span></div>
					 			</td>
					 			<td>
					 				<span class="small pad-left-20"><%= @publisher_product_descriptions[0].description %></span></div>
					 			</td>
					 		</tr>
					 		<tr><td style="height: 10px;"></td><td></td></tr>					 		
					 		<tr>
					 			<td>
					 				<span class="small pad-left-20">Price:</span></div>
					 			</td>
					 			<td>
					 				<span class="small pad-left-20"><%= @publisher_product_descriptions[0].price %></span></div>
					 			</td>
					 		</tr>

					 		<tr><td style="height: 10px;"></td><td></td></tr>
					 		<tr>
					 			<td>
					 				<span class="small pad-left-20">Type of Content or Curriculum:</span></div>
					 			</td>
					 			<td>
					 				<span class="small pad-left-20"><%= @publisher_product_descriptions[0].type_content %></span></div>
					 			</td>
					 		</tr>
					 		<tr><td style="height: 10px;"></td><td></td></tr>
					 		<tr>
					 			<td>
					 				<span class="small pad-left-20">Subject Category:</span></div>
					 			</td>
					 			<td>
					 				<span class="small pad-left-20"><%= @publisher_product_descriptions[0].subject_category %></span></div>
					 			</td>
					 		</tr>
					 		<tr><td style="height: 10px;"></td><td></td></tr>
					 		<tr>
					 			<td>
					 				<span class="small pad-left-20">Key Word Description:</span></div>
					 			</td>
					 			<td>
					 				<span class="small pad-left-20"><%= @publisher_product_descriptions[0].word_description %></span></div>
					 			</td>
					 		</tr>
					 	</table>
						<div class="line-space-20"></div>
						<div class="pad-left-20">
							<span class="normal">
								<%= button_to "Edit", {:action => 'edit', :id => @publisher_product_descriptions[0].id } %>
							</span>
						</div>
						
					<% else %>

						<div>
							<span class="pad-left-20">&laquo;<%= link_to 'Add Product Information', '/PublisherAddProductInformation', :class => 'links' %>&raquo;</span>
						</div>
			
						<div class="line-space-20"></div>
			
						<div>
							<span class="normal-red pad-left-20">No record for this product</span>
						</div>
				
					<% end %>
			
				</div>
				
				<div class="col-right">
					<%= render 'share/dir_publishers_right' %>
				</div>												
			</div>
		</div>
	</div>

	<script>
	  
		//$(window).load( function() {
	
		//});
	  
	</script>		
